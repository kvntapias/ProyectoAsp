@model EventNowASP.Models.Usuario

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    #stickyBar{
        display:none;
    }
</style>
<link href="~/Content/Estilos.css" rel="stylesheet" />
@using (Html.BeginForm())
{
    <div class="page1">
        <div class="container2">
            <div class="left">
                <div class="login">Iniciar Sesión</div>
                <div class="eula">¡Bienvenido/a!</div>
            </div>
            <div class="right">
                <div class="form1">
                    <!--Username-->
                   @Html.Label("Usuario", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                    <!--Contraseña-->
                    @Html.Label("Contraseña", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control", @autocomplete="off" } })
                        @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })

                        <input type="submit" value="Iniciar Sesión" id="submit" class="btn btn-default">
                        </div>
                    </div>
                </div>
            </div>
}





       